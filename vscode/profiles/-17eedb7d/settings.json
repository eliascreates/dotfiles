{
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Vim Dark Medium",
    "editor.fontFamily": "'JetBrainsMonoNL Nerd Font', 'JetBrains Mono', Consolas, 'Courier New', monospace",
    "files.autoSave": "onFocusChange",    
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[xml]": {
        "editor.defaultFormatter": "PrateekMahendrakar.prettyxml"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.AdvanceCustomBrowserCmdLine": "",
    "git.openRepositoryInParentFolders": "always",
    "window.zoomLevel": 0.5,
    
  // Macros
  "macros.list": {
    "renameAppend": [
      "renameFile",
      "editor.action.clipboardCopyAction",
      "editor.action.clipboardPasteAction"
    ]
  },

  // VIM
  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.surround": true,
  "vim.matchpairs": "(:),{:},[:]",
  "vim.highlightedyank.color": "rgba(208, 139, 0, 0.5)",
  "vim.highlightedyank.enable": true,

  // STATUS BAR COLORS FOR VIM MODES
  "vim.statusBarColorControl": false,
  "vim.statusBarColors.visual": ["#3b4261"],
  "vim.statusBarColors.normal": ["#2d353b"],
  "vim.statusBarColors.insert": ["#2d353b"],

  // To improve performance,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  // INSERT MODE KEYBINDINGS
  "vim.insertModeKeyBindings": [
    // {
    //   "before": ["k", "j"],
    //   "after": ["<Esc>"]
    // }
  ],
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false,
    "<C-p>": true
    // "<C-e>": false
  },
  // NORMAL MODE KEYBINDINGS
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<Esc>"], "commands": [":nohlsearch"] },

    // LEADER SHORTCUTS

    // SPLITS
    { "before": ["<leader>", "v"], "commands": [":vsplit"] },
    { "before": ["<leader>", "h"], "commands": [":split"] },

    // SEARCH
    { "before": ["<leader>", "/"], "commands": ["actions.find"] },
    { "before": ["<leader>", "j"], "command": ["code-runner.run"] },

    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },

    // panes
    // NICE TO HAVE
    { "before": ["<leader>", "w"], "commands": [":w!"] },
    { "before": ["<leader>", "q"], "commands": [":q!"] },
    { "before": ["<leader>", "x"], "commands": [":x!"] },
    { "before": ["<leader>", "n"], "commands": [":tabnew"] },

    {
      "before": ["<leader>", "b"],
      "commands": ["editor.debug.action.toggleBreakpoint"]
    },

    // Project Leader Key
    {
      "before": ["<leader>", "<leader>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["workbench.action.openRecent"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.quickOpenNavigatePreviousInFilePicker"]
    },

    { "before": ["<leader>", "c"], "commands": ["editor.action.quickFix"] },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    { "before": ["<leader>", "r"], "commands": ["editor.action.rename"] },

    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    { "before": ["K"], "commands": ["editor.action.showHover"] },
    { "before": ["g", "r"], "commands": ["editor.action.goToReferences"] },
    { "before": ["]", "d"], "commands": ["editor.action.marker.next"] },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    },
    //Which Key
    {
      "before": ["<leader>"],
      "commands": ["whichkey.show"]
    }
  ],
  // VISUAL MODE KEYBINDINGS
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatSelection"]
    },

    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    // toggle comment selection
    { "before": ["<leader>", "c"], "commands": ["editor.action.commentLine"] }
  ],
  "chat.commandCenter.enabled": false,
  "scm.compactFolders": false,
  "explorer.compactFolders": false
}
