{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Create Build Directory",
        "type": "shell",
        "command": "mkdir -Force -Path build\\debug",
        "presentation": {
          "echo": false,
          "reveal": "silent",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true,
          "close": true
        },
        "options": {
          "statusbar": { "hide": true }
        },
        "detail": "Creating build directories"
      },
      {
        "label": "Compile C++",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension}.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "presentation": {
          "echo": false,
          "reveal": "silent",
          "focus": false,
          "panel": "shared",
          "showReuseMessage": false,
          "clear": true,
          "close": true
        },
        "dependsOn": ["Create Build Directory"],
        "detail": "Compile current C++ file",
        "options": {
          "cwd": "${workspaceFolder}",
          "statusbar": {
            "label": "",
            "icon": { "id": "gear" }
          }
        }
      },
      {
        "label": "Run",
        "type": "shell",
        "command": "${workspaceFolder}\\build\\debug\\${fileBasenameNoExtension}.exe",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "presentation": {
          "echo": false,
          "reveal": "always",
          "focus": true,
          "panel": "dedicated",
          "showReuseMessage": false,
          "clear": true
        },
        "options": {
          "statusbar": {
            "label": "",
            "icon": { "id": "play" }
          }
        },
        "detail": "Run compiled executable"
      },
      {
        "label": "Build & Run",
        "type": "shell",
        "dependsOn": [ "Compile C++", "Run" ],
        "dependsOrder": "sequence",
        "group": "test",
        "presentation": {
          "reveal": "always",
          "focus": true,
          "panel": "dedicated",
          "showReuseMessage": false,
          "clear": true
        },
        "options": {
          "statusbar": {
            "label": "",
            "icon": { "id": "rocket" },
            "detail": "Build & Run"
          }
        },
        "detail": "Build and run current file",
        "problemMatcher": []
      },
      {
        "label": "Clean",
        "type": "shell",
        "command": "Remove-Item",
        "args": [
          "-Path",
          "${workspaceFolder}\\build\\debug\\*",
          "-Force",
          "-Recurse",
          "-ErrorAction",
          "SilentlyContinue"
        ],
        "presentation": {
          "echo": false,
          "reveal": "silent",
          "panel": "shared",
          "showReuseMessage": false,
          "close": true
        },
        "options": {
          "statusbar": {
            "label": "",
            "icon":{ "id": "trash" },
            "detail": "Cleaning build directory"
          }
        },
        "detail": "Remove all build artifacts",
        "problemMatcher": []
      }
    ]
  }